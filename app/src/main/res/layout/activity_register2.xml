<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.register.register2"
    android:orientation="vertical"
    android:background="@color/greygpay"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:background="@drawable/bg_home_blue_corner"
                            android:gravity="center|top"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="16dp"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">
                                <ImageView
                                    android:id="@+id/back_reg2"
                                    android:layout_width="20dp"
                                    android:layout_height="20sp"
                                    android:src="@drawable/icon_back">

                                </ImageView>


                            </androidx.constraintlayout.widget.ConstraintLayout>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="55dp"
                            android:layout_marginRight="18dp"
                            android:background="@drawable/bg_homepage_corners"
                            android:gravity="center|top"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/img_register"
                                    android:layout_width="49dp"
                                    android:layout_height="51dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/store"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.498"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.318">

                                </ImageView>

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10sp"
                                    android:text="Merchant"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/img_register">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Information"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView9">

                                </TextView>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="550sp"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="310sp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/et_brandName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Brand Name"
                                    android:background="@drawable/edittext_outline"
                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:layout_marginTop="10dp"
                                    android:inputType="text"
                                    android:layout_marginLeft="25sp"
                                    android:layout_marginRight="25sp"
                                    android:paddingBottom="20sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </EditText>

                                <EditText
                                    android:id="@+id/et_emailMerchant"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Email"

                                    android:background="@drawable/edittext_outline"
                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:layout_marginTop="10sp"
                                    android:paddingBottom="20sp"
                                    android:layout_marginLeft="25sp"
                                    android:layout_marginRight="25sp"
                                    android:inputType="textEmailAddress"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_brandName">

                                </EditText>

                                <EditText
                                    android:id="@+id/et_addressMerchant"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25sp"
                                    android:layout_marginRight="25sp"
                                    android:layout_marginTop="10sp"
                                    android:paddingBottom="20sp"
                                    android:hint="Address"

                                    android:background="@drawable/edittext_outline"
                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_emailMerchant">

                                </EditText>

                                <EditText
                                    android:id="@+id/et_city"
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginEnd="190dp"
                                    android:background="@drawable/edittext_outline"
                                    android:hint="City"

                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="20sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_addressMerchant">

                                </EditText>

                                <EditText
                                    android:id="@+id/et_postalcode"
                                    android:layout_width="150sp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="190dp"
                                    android:layout_marginTop="10sp"
                                    android:background="@drawable/edittext_outline"
                                    android:hint="Postal Code"

                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="20sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_addressMerchant">

                                </EditText>


                                <Spinner
                                    android:id="@+id/spinner_category"
                                    android:hint="Category"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/edittext_outline"
                                    android:paddingStart="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="20sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.095"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_city" />

                                <Spinner
                                    android:id="@+id/spinner_qty"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/edittext_outline"
                                    android:paddingStart="10dp"
                                    android:paddingTop="10dp"
                                    android:hint="Jumlah Toko"

                                    android:paddingBottom="20sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.904"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_postalcode" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="240sp"
                                android:layout_gravity="bottom"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="240dp"
                                    android:text="Logo"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </TextView>

                                <TextView
                                    android:id="@+id/textView13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="240dp"
                                    android:text="Store Photo"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </TextView>

                                <ImageView
                                    android:id="@+id/iv_logo"
                                    android:layout_width="100sp"
                                    android:layout_height="100sp"
                                    android:layout_marginEnd="240dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <ImageView
                                    android:id="@+id/iv_storephoto"
                                    android:layout_width="100sp"
                                    android:layout_height="100sp"
                                    android:layout_marginStart="240dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <Button
                                    android:id="@+id/btn_addlogo"
                                    android:layout_width="70sp"
                                    android:layout_height="50sp"
                                    android:layout_marginEnd="240dp"
                                    android:backgroundTint="#03A9F4"
                                    android:text="Add+"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

                                <Button
                                    android:id="@+id/btn_addstore"
                                    android:layout_width="70sp"
                                    android:layout_height="50sp"
                                    android:layout_marginStart="240dp"
                                    android:backgroundTint="#03A9F4"
                                    android:text="Add+"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.498"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/iv_storephoto" />

                                <Button
                                    android:id="@+id/btn_next2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="55dp"
                                    android:layout_marginEnd="55dp"
                                    android:layout_marginBottom="20dp"
                                    android:backgroundTint="#03A9F4"
                                    android:text="Next"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </FrameLayout>

</LinearLayout>