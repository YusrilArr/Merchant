<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greygpay"
    tools:context=".pages.register.register1"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:id="@+id/swipe"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="550sp"
                            android:layout_gravity="bottom"

                            android:orientation="horizontal">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">



                                <EditText
                                    android:id="@+id/et_nameowner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25sp"
                                    android:layout_marginRight="25sp"
                                    android:layout_marginTop="20dp"
                                    android:ems="10"
                                    android:hint="Name Owner Merchant"
                                    android:inputType="text"

                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="20sp"
                                    android:background="@drawable/edittext_outline"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <EditText
                                    android:id="@+id/et_phoneowner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25sp"
                                    android:layout_marginRight="25sp"

                                    android:ems="10"
                                    android:hint="Owner Phone"

                                    android:layout_marginTop="10dp"
                                    android:paddingBottom="20sp"
                                    android:inputType="phone"
                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:background="@drawable/edittext_outline"

                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_nameowner" />

                                <EditText
                                    android:id="@+id/editTextTextEmailAddress2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25sp"
                                    android:layout_marginRight="25sp"
                                    android:ems="10"
                                    android:hint="Email"

                                    android:layout_marginTop="10dp"

                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:background="@drawable/edittext_outline"


                                    android:paddingBottom="20sp"
                                    android:inputType="textEmailAddress"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_phoneowner" />

                                <EditText
                                    android:id="@+id/et_npwp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="25sp"
                                    android:layout_marginRight="25sp"
                                    android:ems="10"
                                    android:hint="NPWP"
                                    android:layout_marginTop="10dp"

                                    android:paddingStart="10dp"
                                    android:paddingTop="5dp"
                                    android:background="@drawable/edittext_outline"


                                    android:paddingBottom="20sp"
                                    android:inputType="text"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2" />

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginEnd="220dp"
                                    android:text="Foto KTP"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_npwp" />

                                <TextView
                                    android:id="@+id/textView11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="220dp"
                                    android:layout_marginTop="10sp"
                                    android:text="Selfie KTP"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/et_npwp" />

                                <ImageView
                                    android:id="@+id/iv_fotoktp"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_marginTop="5sp"
                                    android:layout_marginEnd="220dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <ImageView
                                    android:id="@+id/iv_selfie"
                                    android:layout_width="100sp"
                                    android:layout_height="100sp"
                                    android:layout_marginStart="220dp"
                                    android:layout_marginTop="5sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <Button
                                    android:id="@+id/btn_addktp"
                                    android:layout_width="70sp"
                                    android:layout_height="50sp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="220dp"
                                    android:backgroundTint="#03A9F4"
                                    android:text="Add+"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/iv_fotoktp" />

                                <Button
                                    android:id="@+id/btn_addselfie"
                                    android:layout_width="70sp"
                                    android:layout_height="50sp"
                                    android:layout_marginStart="220dp"
                                    android:layout_marginTop="5dp"
                                    android:backgroundTint="#03A9F4"
                                    android:text="Add+"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/iv_selfie" />

                                <Button
                                    android:id="@+id/btn_next1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="55sp"
                                    android:layout_marginRight="55sp"
                                    android:layout_marginBottom="20dp"
                                    android:backgroundTint="#02ADFE"
                                    android:text="Next"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:background="@drawable/bg_home_blue_corner"
                            android:gravity="center|top"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/back_reg1"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:src="@drawable/icon_back">

                                </ImageView>
                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginTop="55dp"
                            android:layout_marginRight="18dp"
                            android:background="@drawable/bg_homepage_corners"
                            android:gravity="center|top"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">



                                <ImageView
                                    android:id="@+id/img_register"
                                    android:layout_width="49dp"
                                    android:layout_height="51dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/avatar"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.498"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.318">

                                </ImageView>

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10sp"
                                    android:text="Merchant Owner"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/img_register">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Information"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView9">

                                </TextView>


                            </androidx.constraintlayout.widget.ConstraintLayout>




                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </RelativeLayout>


                    </FrameLayout>

                </LinearLayout>





            </LinearLayout>



        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </FrameLayout>



</LinearLayout>