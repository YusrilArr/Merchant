<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greygpay"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_back"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/txt_trxhistory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/str_settlement_history_header"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_big_c" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_homepage_corners"
                android:gravity="center|top"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="88dp"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.01"
                        android:paddingLeft="12dp"
                        android:text="@string/str_transaction_from"
                        android:textColor="@color/bluetranshistory"
                        android:textSize="@dimen/txt_size_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="96dp"
                        android:layout_marginBottom="88dp"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.01"
                        android:paddingLeft="17dp"
                        android:text="@string/str_transaction_to"
                        android:textColor="@color/bluetranshistory"
                        android:textSize="@dimen/txt_size_small"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/dateFrom"
                        android:layout_width="120dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="40dp"
                        android:focusable="false"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="left"
                        android:inputType="text"
                        android:paddingLeft="13dp"
                        android:text=""
                        android:textColor="@color/greyish_brown_two"
                        android:textColorHint="@color/grey_hint"
                        android:textSize="@dimen/txt_size_xmedium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.017"
                        app:layout_constraintStart_toStartOf="parent" />


                    <View
                        android:id="@+id/view"
                        android:layout_width="142dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="40dp"
                        android:background="@color/blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/dateTo"
                        android:layout_width="117dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="40dp"
                        android:focusable="false"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="left"
                        android:inputType="text"
                        android:paddingLeft="0dp"
                        android:text=""
                        android:textColor="@color/greyish_brown_two"
                        android:textColorHint="@color/grey_hint"

                        android:textSize="@dimen/txt_size_xmedium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />


                    <View
                        android:layout_width="142dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="40dp"
                        android:background="@color/blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/img_settle_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="132dp"
                        android:layout_marginBottom="48dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_drop_down_grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:id="@+id/img_settle_arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="48dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_drop_down_grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.955"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.01"
                        android:text="@string/str_settlement_day"
                        android:visibility="visible"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_size_xsmall_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearlayoutTrxHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_homepage_corners"
                android:gravity="center|top"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layoutHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTrans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutTrxNoData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_nodata"
                    android:layout_width="125dp"
                    android:layout_height="109dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/notransaction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.01"
                    android:text="@string/str_no_transaction_tanggal"
                    android:textColor="@color/greyfont"
                    android:textSize="@dimen/txt_size_small" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
